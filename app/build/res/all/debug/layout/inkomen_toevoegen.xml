<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
   	android:paddingLeft="20dp"
   	android:paddingRight="20dp"
   	android:paddingTop="20dp">
	
    <TextView
        android:id="@+id/inkomsten_omschrijving_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inkomsten_toevoegen_omschrijving_label" />
    
    <EditText
        android:id="@+id/inkomsten_omschrijving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inkomsten_omschrijving_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:inputType="text"
        android:hint="@string/inkomsten_toevoegen_omschrijving"
        android:nextFocusDown="@+id/inkomsten_bedrag">
        <requestFocus />
    </EditText>
	
    <TextView
        android:id="@+id/inkomsten_bedrag_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inkomsten_omschrijving"
        android:layout_marginTop="10dp"
        android:text="@string/inkomsten_toevoegen_bedrag_label" />
    
    <EditText
        android:id="@+id/inkomsten_bedrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inkomsten_bedrag_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:inputType="numberDecimal"
        android:hint="@string/inkomsten_toevoegen_bedrag" />
	
    <TextView
        android:id="@+id/inkomsten_inkomsttype_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inkomsten_bedrag"
        android:layout_marginTop="10dp"
        android:text="@string/inkomsten_toevoegen_inkomsttype_label" />
    
    <Spinner
        android:id="@+id/inkomsten_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inkomsten_inkomsttype_label"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/inkomsten_herhaling_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inkomsten_type_spinner"
        android:layout_marginTop="10dp"
        android:text="@string/inkomsten_toevoegen_herhaling_label" />
	
    <Spinner
        android:id="@+id/inkomsten_herhaling_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inkomsten_herhaling_label"
        android:layout_marginTop="5dp"
        />
    
    <TextView
        android:id="@+id/inkomsten_startdatum_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inkomsten_herhaling_spinner"
        android:layout_marginTop="10dp"
        android:text="@string/inkomsten_startdatum_label" />
    
    <EditText
        android:id="@+id/inkomsten_startdatum_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inkomsten_startdatum_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:inputType="none"
        android:editable="false"
        android:hint="@string/inkomsten_startdatum"
        android:onClick="selectDatum" />
    
    <TextView
        android:id="@+id/inkomsten_einddatum_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inkomsten_startdatum_edit"
        android:layout_marginTop="10dp"
        android:text="@string/inkomsten_einddatum_label" />
    
    <EditText
        android:id="@+id/inkomsten_einddatum_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inkomsten_einddatum_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:inputType="none"
        android:editable="false"
        android:hint="@string/inkomsten_einddatum"
        android:onClick="selectDatum" />
    
</RelativeLayout>
